<div class="card">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">
    <label class="form-label" for="username-input-login">Username</label>
    <input
      id="username-input-login"
      type="text"
      autofocus="true"
      class="form-input"
    />

    <label class="form-label" for="password-input-login">Password</label>
    <input
      id="password-input-login"
      type="password"
      autofocus="true"
      class="form-input"
    />

    <button type="submit" class="btn">Login!</button>
    <a class="login-link" href="/signup">Sign up instead</a>
  </form>
</div>

<!-- javascript file-->
<script src="/javascript/login.js"></script>