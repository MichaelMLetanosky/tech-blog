<!-- Loop over each user object -->
{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <!-- Render user-specific data with Handlebars.js expressions -->
    <h2>{{post.title}}</h2>
  </div>
  <div class="col-md-6">
    <p>{{post.contents}}</p><br>
    <p>Written by {{post.user_id}} on {{post.date_created}}</p>
  </div>
</div>
{{/each}}